<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Youtube playlist saver</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
            rel="stylesheet" 
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
            crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="index.css">
</head>
<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-auto">
                <a title="Original: YouTubeâ€‚Vector:  Jarould, Public domain, via Wikimedia Commons">
                    <img width="128" alt="YouTube full-color icon (2017)" src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/09/YouTube_full-color_icon_%282017%29.svg/512px-YouTube_full-color_icon_%282017%29.svg.png">
                </a>
            </div>
            <div class="col">
                <p class="display-2">Playlist saver</p>
            </div>
        </div>
        <div class="row m-5"></div>
        <div class="row mb-5 pb-5">
            <div class="col-auto ms-3">
                <form class="row" id="selectedPlaylistsForm" action="/" method="post">
                    <div class="col-auto">
                        <% for (var i = 0; i < Math.ceil(playlists.length / 2); i++) { %>
                            <div class="row mt-2 border rounded shadow-sm" id="container_<%= i %>">
                                <div class="col-auto me-3 playlist-title-column">
                                    <p class="m-2 playlist-title-text"><%= playlists[i].title.substring(0, 35) %></p>
                                </div>
                                <div class="col p-1">
                                    <div class="btn-group me-0 float-end">
                                        <button type="button" onclick="togglePlaylist('<%= i %>', true)" class="btn btn-success" id="button1_<%= i %>"><i class="bi bi-check"></i></button>
                                        <button type="button" onclick="togglePlaylist('<%= i %>', false)" class="btn btn-outline-danger" id="button2_<%= i %>"><i class="bi bi-x"></i></button>
                                    </div>
                                    <input id="input_<%= i %>" type="text" name="selectedPlaylists[]" value="true" hidden />
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="col-auto ms-4">
                        <% for (var i = Math.ceil(playlists.length / 2); i < playlists.length; i++) { %>
                            <div class="row mt-2 border rounded shadow-sm" id="container_<%= i %>">
                                <div class="col-auto me-3 playlist-title-column">
                                    <p class="m-2 playlist-title-text"><%= playlists[i].title.substring(0, 35) %></p>
                                </div>
                                <div class="col p-1">
                                    <div class="btn-group me-0 float-end">
                                        <button type="button" onclick="togglePlaylist('<%= i %>', true)" class="btn btn-success" id="button1_<%= i %>"><i class="bi bi-check"></i></button>
                                        <button type="button" onclick="togglePlaylist('<%= i %>', false)" class="btn btn-outline-danger" id="button2_<%= i %>"><i class="bi bi-x"></i></button>
                                    </div>
                                    <input id="input_<%= i %>" type="text" name="selectedPlaylists[]" value="true" hidden />
                                </div>
                            </div>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="position-fixed bottom-0 border-top fixed-interaction-menu">
        <div class="container">
            <div class="row pt-2 pb-2">
                <div class="col">
                    <div class="info-box-text"><%= itemsCount %> playlists gathered</div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-auto">
                            <button type="button" onclick="toggleAllPlaylists('<%= itemsCount %>', true)" class="btn btn-outline-success float-end menu-buttons">Select all</button>
                        </div>
                        <div class="col-auto">
                            <button type="button" onclick="toggleAllPlaylists('<%= itemsCount %>', false)" class="btn btn-outline-danger float-end menu-buttons">Clear selection</button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="col-auto">
                            <button type="button" onclick="" class="btn btn-outline-primary float-end menu-buttons">Refresh</button>
                        </div>
                        <div class="col-auto">
                            <button type="submit" form="selectedPlaylistsForm" class="btn btn-primary float-end menu-buttons">Backup</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>

function toggleAllPlaylists(numberOfPlaylists, select) {
    for (let i = 0; i < numberOfPlaylists; i++) {
        doPlaylistToggle(
            document.getElementById('container_' + i),
            document.getElementById('button1_' + i),
            document.getElementById('button2_' + i),
            document.getElementById('input_' + i),
            select
        );
    }
}

function togglePlaylist(playlist_id, select) {
    let container = document.getElementById('container_' + playlist_id);
    let button1 = document.getElementById('button1_' + playlist_id);
    let button2 = document.getElementById('button2_' + playlist_id);
    let input = document.getElementById('input_' + playlist_id);
    
    doPlaylistToggle(container, button1, button2, input, select);
}

function doPlaylistToggle(container, button1, button2, form_input, select) {
    if (select) {
        button1.classList.remove('btn-outline-success');
        button1.classList.add('btn-success');
        
        button2.classList.remove('btn-danger');
        button2.classList.add('btn-outline-danger');

        container.style.opacity = '100%';

        form_input.value = 'true';
    }
    else {
        button1.classList.remove('btn-success');
        button1.classList.add('btn-outline-success');

        button2.classList.remove('btn-outline-danger');
        button2.classList.add('btn-danger');

        container.style.opacity = '50%';

        form_input.value = 'false';
    }
}

</script>