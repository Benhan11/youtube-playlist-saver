<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Youtube playlist saver</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
            rel="stylesheet" 
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
            crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="index.css">
</head>
<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-auto">
                <a title="Original: YouTubeâ€‚Vector:  Jarould, Public domain, via Wikimedia Commons">
                    <img width="128" alt="YouTube full-color icon (2017)" src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/09/YouTube_full-color_icon_%282017%29.svg/512px-YouTube_full-color_icon_%282017%29.svg.png">
                </a>
            </div>
            <div class="col">
                <p class="display-2">Playlist saver</p>
            </div>
        </div>
        <div class="row m-5"></div>
        <div class="row mb-5">
            <div class="col-auto me-5">
                <div class="row">
                    <div class="col-auto mt-2 p-4 border rounded">
                        <!-- username, number of items, time, ... -->
                        <p class="info-box-text">Username</p>
                        <p class="info-box-text">Playlists gathered: <%= itemsCount %></p>
                    </div>
                </div>
            </div>
            <div class="col-auto ms-5">
                <div class="row">
                    <div class="col-auto">
                        <% for (var i = 0; i < Math.ceil(playlistTitles.length / 2); i++) { %>
                            <div class="row mt-2 border rounded shadow-sm">
                            <div class="row mt-2 border rounded shadow-sm" id="playlist_<%= i %>">
                                <div class="col-auto me-3 playlist-title-column">
                                    <p class="m-2 playlist-title-text"><%= playlistTitles[i].substring(0, 35) %></p>
                                </div>
                                <div class="col p-1">
                                    <div class="btn-group me-0 float-end">
                                        <button type="button" class="btn btn-success"><i class="bi bi-check"></i></button>
                                        <button type="button" class="btn btn-outline-danger"><i class="bi bi-x"></i></button>
                                        <button onclick="" type="button" class="btn btn-outline-danger"><i class="bi bi-x"></i></button>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="col-auto ms-4">
                        <% for (var i = Math.ceil(playlistTitles.length / 2); i < playlistTitles.length; i++) { %>
                            <div class="row mt-2 border rounded shadow-sm">
                            <div class="row mt-2 border rounded shadow-sm" id="container_<%= i %>">
                                <div class="col-auto me-3 playlist-title-column">
                                    <p class="m-2 playlist-title-text"><%= playlistTitles[i].substring(0, 35) %></p>
                                </div>
                                <div class="col p-1">
                                    <div class="btn-group me-0 float-end">
                                        <button type="button" class="btn btn-success"><i class="bi bi-check"></i></button>
                                        <button type="button" class="btn btn-outline-danger"><i class="bi bi-x"></i></button>
                                        <button type="button" onclick="togglePlaylist('<%= i %>', true)" class="btn btn-success" id="button1_<%= i %>"><i class="bi bi-check"></i></button>
                                        <button type="button" onclick="togglePlaylist('<%= i %>', false)" class="btn btn-outline-danger" id="button2_<%= i %>"><i class="bi bi-x"></i></button>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
</html>

<script>
function togglePlaylist(playlist_id, make_active) {
    let container = document.getElementById('container_' + playlist_id);
    let button1 = document.getElementById('button1_' + playlist_id);
    let button2 = document.getElementById('button2_' + playlist_id);
    if (make_active) {
        button1.classList.remove('btn-outline-success');
        button1.classList.add('btn-success');
        
        button2.classList.remove('btn-danger');
        button2.classList.add('btn-outline-danger');
        container.style.opacity = '100%';
    }
    else {
        button1.classList.remove('btn-success');
        button1.classList.add('btn-outline-success');
        button2.classList.remove('btn-outline-danger');
        button2.classList.add('btn-danger');
        container.style.opacity = '50%';
    }
    
}
</script>